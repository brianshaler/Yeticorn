// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

global-reset()

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

body
  background: #fff
  font-family: sans-serif

header
    background-color: #999
    padding: 15px
  h1
    font-size: 24pt
    text-align: center
    color: #fff

.setup
  form
    max-width: 400px
    margin-left: auto
    margin-right: auto
    margin-top: 20px
    text-align: center
    input
      text-transform: uppercase
      margin-top: 12px
      width: 50%
    input[type=text]
      text-align: center
  p
    margin-top: 12px
    color: #999
    font-size: 16pt

.outer-container
  position: absolute
  width: 100%
  max-width: 100%
  overflow: hidden




